{% for node in nodes %}
upstream {{node.vhost}}_upstream {
{% for member in node.members %}
	server {{member.ip}}:{{member.port}};
{% endfor %}
}

server {
	server_name {{node.vhost}};
	listen 80;
	access_log /var/log/nginx/{{node.vhost}}.access.log;
	error_log /var/log/nginx/{{node.vhost}}.error.log;
	location / {
		include proxy_params;
		proxy_pass http://{{node.vhost}}_upstream;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $remote_addr;

	}
}

{% endfor %}